<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="397dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:text="RealTime Data"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="Weather"
        android:textSize="20dp"
        android:gravity="left"
        android:onClick="checkWeather"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:text="News"
        android:textSize="20dp"
        android:gravity="left"
        android:onClick="checkNews"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:text="Food Recipe"
        android:textSize="20dp"
        android:gravity="left"
        android:onClick="checkFood"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/button5"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:text="Raw Food"
        android:textSize="20dp"
        android:gravity="left"
        android:onClick="checkFoodDB"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/button6"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:text="Music"
        android:textSize="20dp"
        android:gravity="left"
        android:onClick="checkSong"
        android:textStyle="bold"
        />
</RelativeLayout>